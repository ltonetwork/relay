# EQTY Relay Service Environment Configuration
# Copy this file to .env and update the values as needed
NODE_ENV=development

# Server Configuration
PORT=3000
PUBLIC_HOSTNAME=localhost
API_PREFIX=

# Base Mainnet Configuration
BASE_MAINNET_RPC_URL=https://mainnet.base.org

# Base Sepolia Testnet Configuration
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Anchor Verification Settings
ANCHOR_VERIFICATION_CACHE_TTL=300000
ANCHOR_VERIFICATION_MAX_RETRIES=3
ANCHOR_VERIFICATION_TIMEOUT=10000
ANCHOR_VERIFICATION_USE_REDIS_CACHE=false

REDIS_URL=redis://localhost:6379

RABBITMQ_CLIENT=amqp://guest:guest@localhost:5672
RABBITMQ_EXCHANGE=amq.direct
RABBITMQ_QUEUE=relay
RABBITMQ_SHOVEL=relay-shovel

# LTO Testnet
LTO_NODE_TESTNET=https://testnet.lto.network
DID_RESOLVER_TESTNET=https://testnet.lto.network/index/identifiers

# LTO Mainnet
LTO_NODE_MAINNET=https://nodes.lto.network
DID_RESOLVER_MAINNET=https://nodes.lto.network/index/identifiers

# Development Mode Settings
DISABLE_AUTH=false
ACCEPT_UNSIGNED=false
FORCE_LOCAL_DELIVERY=false

LOG_LEVEL=info
LOG_FORCE=false

# Default service endpoint for message routing
DEFAULT_SERVICE_ENDPOINT=amqp://relay.lto.network

# Target URL for message dispatch (optional)
# DISPATCHER_TARGET_URL=https://api.example.com/webhook
# DISPATCHER_TARGET_API_KEY=your-api-key-here

# Enable inbox functionality
INBOX_ENABLED=true

# Storage path for messages (local path or S3 URL)
INBOX_STORAGE=./storage

# Maximum size for embedded messages (in bytes)
INBOX_EMBED_MAX_SIZE=1048576

# Enable queue functionality
QUEUE_ENABLED=true
